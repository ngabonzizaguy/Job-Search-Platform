{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "node",
      "jest",
      "@types/babel__core",
      "@types/babel__generator",
      "@types/babel__template",
      "@types/babel__traverse",
      "@types/eslint",
      "@types/estree",
      "@types/hammerjs",
      "@types/json-schema"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
